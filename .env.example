### MUST CHANGE FOR PRODUCTION ENVIRONMENT ###
APP_ENV=dev
POSTGRES_PASSWORD=admin # Postgres Password
POSTGRES_HOST=localhost # For dev (localhost) for prod (postgres)
LOKI_HOST=localhost # For dev (localhost) for prod (loki)
PGADMIN_DEFAULT_PASSWORD=admin # pgAdmin Password
GF_SECURITY_ADMIN_PASSWORD=admin # Grafana Admin Password
R2_ACCOUNT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx # ID da conta Cloudflare
R2_TOKEN_VALUE=the_generated_token_value # Token value gerado no momento da criação do token
R2_ACCESS_KEY_ID=your_r2_access_key_id # Chave de acesso pública (API Token ou Access Key ID)
R2_ACCESS_KEY_SECRET=your_r2_secret_access_key # Chave secreta de acesso
R2_BUCKET=app-images # Nome do bucket R2
R2_PUBLIC_URL=https://<your-account>.r2.dev # URL público usado para acessar arquivos

# Fiber App Settings
APP_PORT=4000
APP_HOST=localhost

# PostgreSQL Environment Variables
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_DB=maindb
POSTGRES_DB_TEST=testdb
