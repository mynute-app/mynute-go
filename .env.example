APP_ENV=dev
POSTGRES_PASSWORD=admin
POSTGRES_HOST=localhost
PGADMIN_DEFAULT_PASSWORD=admin
GF_SECURITY_ADMIN_PASSWORD=admin
R2_ACCOUNT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
R2_TOKEN_VALUE=the_generated_token_value
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_ACCESS_KEY_SECRET=your_r2_secret_access_key 
R2_BUCKET=app-images
R2_PUBLIC_URL=https://<your-account>.r2.dev 
RESEND_API_KEY=your_resend_api_key
RESEND_DEFAULT_FROM=noreply@yourdomain.com
SWAGGER_USER=admin
SWAGGER_PASSWORD=admin
BACKEND_EXTERNAL_DOMAIN=api.mynute.app
PGWEB_EXTERNAL_DOMAIN=postgres.mynute.app
RUN_PROD_MIGRATIONS=false
RUN_PROD_SEED=false

### --------------------------------- ###

# Fiber App Settings
APP_PORT=4000
APP_HOST=localhost

# PostgreSQL Environment Variables
POSTGRES_PORT=5432
POSTGRES_USER=postgres

# IMPORTANT: POSTGRES_DB_PROD is used by migration tools and should point to the database
# you want to migrate. For development, set it to devdb. For production, set it to maindb.
# The application uses APP_ENV to determine which database to connect to at runtime.
POSTGRES_DB_PROD=maindb
POSTGRES_DB_TEST=testdb  # Used by application when APP_ENV=test
POSTGRES_DB_DEV=devdb    # Used by application when APP_ENV=dev

TEST_DB_EXISTS=false
MAIN_DB_EXISTS=false
POSTGRES_CA_FILE=/certificates/ca-cert.pem
POSTGRES_KEY_FILE=/certificates/ca-key.pem

# pgAdmin Environment Variables
PGADMIN_DEFAULT_EMAIL=admin@admin.com
PGADMIN_PORT=8080
MAX_LOGIN_ATTEMPTS=20

#Grafana Settings
GRAFANA_PORT=3000
GRAFANA_ALIAS_PORT=3001
GF_SECURITY_ADMIN_USER=admin

#### ========= CLOUD STORAGE SETTINGS =========
STORAGE_DRIVER=R2

# ========= MINIO =========
# (APP_ENV = dev || APP_ENV = test)
MINIO_ENDPOINT=http://minio:9000
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=minio123
MINIO_BUCKET=app-local-images
MINIO_PUBLIC_URL=http://localhost:9000


# ========= MAILHOG =========
# (APP_ENV = dev || APP_ENV = test)
MAILHOG_HOST=localhost
MAILHOG_PORT=1025
